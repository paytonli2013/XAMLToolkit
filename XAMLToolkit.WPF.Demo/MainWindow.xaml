<Window x:Class="XAMLToolkit.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="https://github.com/paytonli2013/XAMLToolkit"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="ToastContainer">
                <Grid>
                    <toolkit:ToastContainer ItemsSource="{Binding Messages}" EnableAutoRemove="False"/>
                </Grid>
            </TabItem>
            <TabItem Header="Container">
                <Grid>
                    <!--<toolkit:Container Name="container1"/>-->
                </Grid>
            </TabItem>
            <TabItem Header="Themed UserControl">
                <Grid>
                    <!--<toolkit:UserControlForTheme/>-->
                    <toolkit:Container Name="container2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
